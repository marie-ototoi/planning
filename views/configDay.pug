html
	head
		meta(charset='utf-8')
		title #{title}
		link(rel='stylesheet', href='/styles/calendar.css')
		script(type='text/javascript').
			const day=#{day}
			const types=#{types}

	body.config
		main.container
			include _flashes
			form(action='/config/day/' + day._id, method='POST')#config
				div.form-group.row
					label(for='day').col-sm-2.col-sm-offset-3.col-form-label Date 
					div.col-sm-4
						input(type='date', name='day', value=day._id)#day.form-control
				div.form-group.row
					label(for='morning').col-sm-2.col-sm-offset-3.col-form-label Morning location
					div.col-sm-4
						select(name='morning')#morning.form-control
							each type in types
								option(value=type.key, selected=(day.morning === type.key))= type.val
				div.form-group.row
					label(for='afternoon').col-sm-2.col-sm-offset-3.col-form-label Afternoon location
					div.col-sm-4
						select(name='afternoon')#afternoon.form-control
							each type in types
								option(value=type.key, selected=(day.afternoon === type.key))= type.val
				input(type='submit', value='Save day').btn.btn-large